<p id="notice"><%= notice %></p>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
    <% if @contact.errors.any? %>
    <div id="error_explanation">
      <!--# バリデーションエラーの件数を表示します。-->
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      <!--# @contact.errorsは@blogをバリデーションした際のエラー情報です。-->
      <!--# full_messagesは複数のエラーメッセージを表します。-->
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
        <tr>
            <th>お名前</th>
            <td><%= f.text_field :name, class: 'form-control' %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email, class: 'form-control' %></td>
        </tr>
        <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :content, class: 'form-control' %></td>
        </tr>
    </table>
    <%= f.submit '確認', class: 'btn btn-primary btn-block' %>
<% end %>